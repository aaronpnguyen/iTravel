<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iTravel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/iTravel.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm border-bottom mb-3">
            <div class="center-nav container-fluid d-flex justify-content-between align-items-center mx-auto">
                <a class="navbar-brand">iTravel</a>
                    <partial name="_searchBar"></partial>
                    <ul class="navbar-nav align-items-center">
                        <li>
                            <a class="nav-link" style="color: #fff;" id="dashboard" asp-area="" asp-controller="User"
                            asp-action="Dashboard">Dashboard</a>
                        </li>
                    @if (@Context.Session.GetInt32("id") != null)
                    {
                        int? id = @Context.Session.GetInt32("id");
                            <li class="nav-item">
                                <a class="btn btn-primary me-4" href="/user/@id">Profile</a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="User" asp-action="Logout" method="post"><button
                                    class="btn btn-danger">Logout</button></form>
                            </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
